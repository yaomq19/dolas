<Window x:Class="Dolas.AssetEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Dolas.AssetEditor.ViewModels"
        xmlns:conv="clr-namespace:Dolas.AssetEditor.Converters"
        mc:Ignorable="d"
        Title="Dolas 资产编辑器"
        Width="1600" Height="900"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:EditorTypeToVisibilityConverter x:Key="EditorTypeToVisibility" />
        <conv:InverseBoolToVisibilityConverter x:Key="InvBoolToVis" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_文件">
                <MenuItem Header="打开工程..." Command="{Binding OpenProjectCommand}" />
                <Separator />
                <MenuItem Header="退出" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_帮助">
                <MenuItem Header="关于" Command="{Binding AboutCommand}" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="340" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="180" />
            </Grid.RowDefinitions>

            <!-- 左侧：资产树 -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="资产">
                <DockPanel>
                    <TextBox DockPanel.Dock="Top"
                             Margin="6"
                             Height="26"
                             VerticalContentAlignment="Center"
                             Text="{Binding AssetFilterText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="筛选（占位）" />
                    <TreeView Margin="6"
                              ItemsSource="{Binding AssetRoots}"
                              SelectedItemChanged="AssetTree_SelectedItemChanged">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}" />
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </DockPanel>
            </GroupBox>

            <!-- 中间：JSON 内容显示与编辑 -->
            <GroupBox Grid.Row="0" Grid.Column="1" Header="内容">
                <DockPanel Margin="6">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock VerticalAlignment="Center" Text="{Binding SelectedAssetName}" FontWeight="SemiBold" />
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666" Text="{Binding SelectedAssetPath}" />
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                            <Button x:Name="NewAssetButton"
                                    Content="New Asset"
                                    Margin="0,0,10,0"
                                    Click="NewAssetButton_Click"
                                    IsEnabled="{Binding CanCreateNewAsset}">
                                <Button.ContextMenu>
                                    <ContextMenu ItemsSource="{Binding AvailableSchemas}">
                                        <ContextMenu.ItemContainerStyle>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Header" Value="{Binding ClassName}" />
                                                <Setter Property="ToolTip" Value="{Binding FileSuffix}" />
                                                <Setter Property="Command" Value="{Binding DataContext.NewAssetFromSchemaCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                <Setter Property="CommandParameter" Value="{Binding}" />
                                            </Style>
                                        </ContextMenu.ItemContainerStyle>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                            <Button Content="重载" Command="{Binding ReloadCommand}" Margin="0,0,6,0" />
                            <Button Content="保存" Command="{Binding SaveCommand}" />
                        </StackPanel>
                        <TextBlock VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   Foreground="#B00020"
                                   Text="未保存"
                                   Visibility="{Binding IsDirty, Converter={StaticResource BoolToVis}}" />
                    </StackPanel>

                    <Grid>
                        <Border BorderBrush="#2B2B2B" BorderThickness="1">
                            <Grid>
                                <TextBlock Foreground="#666"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="请选择左侧 content 下的资产文件（例如 default.camera）"
                                           Visibility="{Binding HasSelectedAsset, Converter={StaticResource InvBoolToVis}}" />

                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Auto">
                                    <TreeView ItemsSource="{Binding AssetRoot.Children}"
                                              Visibility="{Binding HasSelectedAsset, Converter={StaticResource BoolToVis}}">
                                        <TreeView.ItemTemplate>
                                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="260" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" />
                                                        <TextBlock Margin="8,0,0,0" Foreground="#777" Text="{Binding Summary}" />
                                                    </StackPanel>

                                                    <Grid Grid.Column="1">
                                                        <!-- String / Int / Float -->
                                                        <TextBox MinWidth="200"
                                                                 Text="{Binding ScalarText, UpdateSourceTrigger=PropertyChanged}"
                                                                 AcceptsReturn="True"
                                                                 TextWrapping="Wrap"
                                                                 VerticalScrollBarVisibility="Auto"
                                                                 Visibility="{Binding EditorType, Converter={StaticResource EditorTypeToVisibility}, ConverterParameter=String}" />
                                                        <TextBox MinWidth="200"
                                                                 Text="{Binding ScalarText, UpdateSourceTrigger=PropertyChanged}"
                                                                 Visibility="{Binding EditorType, Converter={StaticResource EditorTypeToVisibility}, ConverterParameter=Int}" />
                                                        <TextBox MinWidth="200"
                                                                 Text="{Binding ScalarText, UpdateSourceTrigger=PropertyChanged}"
                                                                 Visibility="{Binding EditorType, Converter={StaticResource EditorTypeToVisibility}, ConverterParameter=UInt}" />
                                                        <TextBox MinWidth="200"
                                                                 Text="{Binding ScalarText, UpdateSourceTrigger=PropertyChanged}"
                                                                 Visibility="{Binding EditorType, Converter={StaticResource EditorTypeToVisibility}, ConverterParameter=Float}" />

                                                        <!-- Enum -->
                                                        <ComboBox MinWidth="200"
                                                                  ItemsSource="{Binding EnumValues}"
                                                                  DisplayMemberPath="Name"
                                                                  SelectedValuePath="Name"
                                                                  SelectedValue="{Binding EnumSelectedName, UpdateSourceTrigger=PropertyChanged}"
                                                                  Visibility="{Binding EditorType, Converter={StaticResource EditorTypeToVisibility}, ConverterParameter=Enum}" />

                                                        <!-- Bool -->
                                                        <CheckBox Content="true/false"
                                                                  IsChecked="{Binding BoolValue}"
                                                                  Visibility="{Binding EditorType, Converter={StaticResource EditorTypeToVisibility}, ConverterParameter=Bool}" />

                                                        <!-- Vector3 -->
                                                        <StackPanel Orientation="Horizontal"
                                                                    Visibility="{Binding EditorType, Converter={StaticResource EditorTypeToVisibility}, ConverterParameter=Vector3}">
                                                            <TextBox Width="70" Margin="0,0,6,0" Text="{Binding XText, UpdateSourceTrigger=PropertyChanged}" />
                                                            <TextBox Width="70" Margin="0,0,6,0" Text="{Binding YText, UpdateSourceTrigger=PropertyChanged}" />
                                                            <TextBox Width="70" Text="{Binding ZText, UpdateSourceTrigger=PropertyChanged}" />
                                                        </StackPanel>

                                                        <!-- Vector4 -->
                                                        <StackPanel Orientation="Horizontal"
                                                                    Visibility="{Binding EditorType, Converter={StaticResource EditorTypeToVisibility}, ConverterParameter=Vector4}">
                                                            <TextBox Width="70" Margin="0,0,6,0" Text="{Binding XText, UpdateSourceTrigger=PropertyChanged}" />
                                                            <TextBox Width="70" Margin="0,0,6,0" Text="{Binding YText, UpdateSourceTrigger=PropertyChanged}" />
                                                            <TextBox Width="70" Margin="0,0,6,0" Text="{Binding ZText, UpdateSourceTrigger=PropertyChanged}" />
                                                            <TextBox Width="70" Text="{Binding WText, UpdateSourceTrigger=PropertyChanged}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </HierarchicalDataTemplate>
                                        </TreeView.ItemTemplate>
                                    </TreeView>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <!-- 右侧：属性 -->
            <GroupBox Grid.Row="0" Grid.Column="2" Header="属性">
                <ScrollViewer Margin="6" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="选中资产：" FontWeight="SemiBold" />
                        <TextBlock Margin="0,4,0,12" Text="{Binding SelectedAssetName}" />

                        <TextBlock Text="属性面板（占位）" FontWeight="SemiBold" />
                        <TextBlock Margin="0,4,0,0"
                                   TextWrapping="Wrap"
                                   Foreground="#666"
                                   Text="建议后续用 DataTemplate/Editor 控件系统渲染不同资源类型的属性。" />
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <!-- 底部：日志 -->
            <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Header="日志">
                <ListBox Margin="6" ItemsSource="{Binding Logs}" />
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>


