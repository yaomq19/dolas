<Window x:Class="Dolas.ModelImporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dolas.ModelImporter"
        xmlns:viewmodels="clr-namespace:Dolas.ModelImporter.ViewModels"
        mc:Ignorable="d"
        Title="Dolas Model Importer" Height="300" Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="331*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dolas Engine 模型导入工具" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Grid.ColumnSpan="2"/>

        <Grid Margin="0,45,0,10" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding InputFilePath, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalAlignment="Center" Margin="0,0,10,0" Padding="5"/>
            <Button Content="浏览..." Grid.Column="1" Padding="15,5" 
                    Command="{Binding BrowseCommand}"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1" Margin="216,0,0,0">
            <Button Content="转换为 .mesh" Padding="20,8" 
                    Command="{Binding ConvertCommand}"
                    IsEnabled="{Binding CanConvert}"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" 
                   VerticalAlignment="Bottom" Foreground="Gray" Margin="0,0,0,10" Grid.ColumnSpan="2"/>
    </Grid>
</Window>

