<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>ModelImporter</AssemblyName>
    <RootNamespace>Dolas.ModelImporter</RootNamespace>

    <!-- 兼容 CMake/VS 多配置 -->
    <Configurations>Debug;Release;RelWithDebInfo;MinSizeRel</Configurations>
    <Platforms>AnyCPU;x64</Platforms>

    <!-- 源码目录由 CMake 注入 -->
    <ModelImporterSourceDir>@MODEL_IMPORTER_SOURCE_DIR@</ModelImporterSourceDir>
  </PropertyGroup>

  <!-- 引用源码 -->
  <ItemGroup>
    <Compile Include="$(ModelImporterSourceDir)/**/*.cs"
             Exclude="$(ModelImporterSourceDir)/**/bin/**;$(ModelImporterSourceDir)/**/obj/**" />
    <ApplicationDefinition Include="$(ModelImporterSourceDir)/App.xaml" />
    <Page Include="$(ModelImporterSourceDir)/MainWindow.xaml" />
  </ItemGroup>

  <!-- 第三方 NuGet 包引用 -->
  <ItemGroup>
    <PackageReference Include="AssimpNet" Version="4.1.0" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Platform)' == 'x64'">
    <PlatformTarget>x64</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <!-- 允许引用旧版 .NET Framework 的包 -->
    <AssetTargetFallback>$(AssetTargetFallback);net45</AssetTargetFallback>
  </PropertyGroup>

</Project>
